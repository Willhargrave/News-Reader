datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Feed {
  id       String @id @default(uuid())
  title    String
  link     String @unique
  category String @default("general")
}

model Category {
  id        String     @id @default(uuid())
  name      String     @unique
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  userFeeds UserFeed[]
}

model UserFeed {
  id         String    @id @default(uuid())
  title      String
  link       String    @unique
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?
}

model User {
  id           String     @id @default(uuid())
  username     String     @unique
  password     String
  removedFeeds Json       @default("[]")
  userFeeds    UserFeed[]
  categories   Category[]
}
