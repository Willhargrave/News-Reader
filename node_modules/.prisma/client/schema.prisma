datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Feed {
  id       String @id @default(uuid())
  title    String
  link     String @unique
  category String @default("news")
}

model UserFeed {
  id       String @id @default(uuid())
  title    String
  link     String @unique
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  category String @default("news")
}

model User {
  id           String     @id @default(uuid())
  username     String     @unique
  password     String
  removedFeeds Json       @default("[]")
  userFeeds    UserFeed[]
}
