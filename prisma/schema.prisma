datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Feed {
  id       String @id @default(uuid())
  title    String
  link     String @unique
  category String @default("news")
}

model UserFeed {
  id       String @id @default(uuid())
  title    String
  link     String 
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  category String @default("news")
  @@unique([userId, link])
}

model User {
  id           String     @id @default(uuid())
  username     String     @unique
  password     String
  removedFeeds        RemovedFeed[]  @relation("UserRemovedFeeds")
  userFeeds    UserFeed[]
  defaultArticleCount Int        @default(10)
}

model RemovedFeed {
  id        String   @id @default(uuid())
  feedId    String
  userId    String
  user      User     @relation("UserRemovedFeeds", fields: [userId], references: [id])
  removedAt DateTime @default(now())
}